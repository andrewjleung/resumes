{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Resume",
  "type": "object",
  "properties": {
    "profile": {
      "$ref": "#/$defs/Profile"
    },
    "contact": {
      "anyOf": [
        {
          "$ref": "#/$defs/Contact"
        },
        {
          "type": "null"
        }
      ]
    },
    "education": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Education"
      },
      "default": []
    },
    "socials": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Social"
      },
      "default": []
    },
    "skills": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "default": {}
    },
    "experiences": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Experience"
      },
      "default": []
    }
  },
  "required": [
    "profile"
  ],
  "$defs": {
    "Profile": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "middle_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "last_name": {
          "type": "string"
        },
        "profile_picture_url": {
          "type": [
            "string",
            "null"
          ]
        },
        "headline": {
          "type": [
            "string",
            "null"
          ]
        },
        "summary": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "first_name",
        "last_name"
      ]
    },
    "Contact": {
      "type": "object",
      "properties": {
        "personal_email": {
          "type": "string"
        },
        "work_email": {
          "type": [
            "string",
            "null"
          ]
        },
        "phone": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "personal_email"
      ]
    },
    "Education": {
      "type": "object",
      "properties": {
        "institution": {
          "type": "string"
        },
        "when": {
          "anyOf": [
            {
              "$ref": "#/$defs/When"
            },
            {
              "type": "null"
            }
          ]
        },
        "location": {
          "anyOf": [
            {
              "$ref": "#/$defs/Location"
            },
            {
              "type": "null"
            }
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        },
        "area": {
          "type": [
            "string",
            "null"
          ]
        },
        "kind": {
          "type": [
            "string",
            "null"
          ]
        },
        "score": {
          "type": [
            "string",
            "null"
          ]
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "courses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "required": [
        "institution"
      ]
    },
    "When": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "Date": {
              "type": "string",
              "format": "date"
            }
          },
          "required": [
            "Date"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Range": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "string",
                  "format": "date"
                },
                "end": {
                  "type": "string",
                  "format": "date"
                }
              },
              "required": [
                "start",
                "end"
              ]
            }
          },
          "required": [
            "Range"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Started": {
              "type": "string",
              "format": "date"
            }
          },
          "required": [
            "Started"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Year": {
              "type": "integer",
              "format": "int32"
            }
          },
          "required": [
            "Year"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Location": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Remote"
          ]
        },
        {
          "type": "object",
          "properties": {
            "CityState": {
              "type": "array",
              "prefixItems": [
                {
                  "type": "string"
                },
                {
                  "type": "string"
                }
              ],
              "minItems": 2,
              "maxItems": 2
            }
          },
          "required": [
            "CityState"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Address": {
              "$ref": "#/$defs/Address"
            }
          },
          "required": [
            "Address"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Address": {
      "type": "object",
      "properties": {
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "country_code": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "postal_code": {
          "type": [
            "string",
            "null"
          ]
        },
        "address": {
          "type": "string"
        },
        "address_second_line": {
          "type": "string"
        }
      },
      "required": [
        "country_code",
        "region",
        "city",
        "address",
        "address_second_line"
      ]
    },
    "Social": {
      "type": "object",
      "properties": {
        "network": {
          "type": [
            "string",
            "null"
          ]
        },
        "username": {
          "type": [
            "string",
            "null"
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Experience": {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "context": {
          "type": [
            "string",
            "null"
          ]
        },
        "summary": {
          "type": [
            "string",
            "null"
          ]
        },
        "when": {
          "anyOf": [
            {
              "$ref": "#/$defs/When"
            },
            {
              "type": "null"
            }
          ]
        },
        "location": {
          "anyOf": [
            {
              "$ref": "#/$defs/Location"
            },
            {
              "type": "null"
            }
          ]
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        },
        "highlights": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "required": [
        "kind",
        "name"
      ]
    }
  }
}
